<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <meta charset="utf-8" />
    
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav>
            <div class="container">
                <ul>
                    <li>
                        <img src="~/img/Logo.png" alt="Page Logo" />
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Index"> Home</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="About"> About</a>
                    </li>
                    
                    <li>
                        <a asp-controller="Home" asp-action="Projects"> Projects</a>
                    </li>
                    <li>
                        <a asp-controller="Doctor" asp-action="FeverCheck"> Fever Check</a>
                    </li>
                    <li>
                        <a asp-controller="GuessingGame" asp-action="GuessingGame"> Guessing Game</a>
                    </li>

                    <li>
                        <a asp-controller="People" asp-action="PeopleList">People</a>
                    </li>

                    <li>
                        <a asp-controller="Ajax" asp-action="Index">People Ajax</a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Contact"> Contact</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    <section>
        <div>
            @RenderBody()
        </div>
    </section>
    <footer>@DateTime.Now.ToShortDateString() &copy;Salman Yahya</footer>




    
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/js/PersonScript.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
